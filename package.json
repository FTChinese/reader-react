{
  "name": "reader-react",
  "version": "0.1.3",
  "scripts": {
    "dev": "vite",
    "html-dev": "ts-node --project=scripts/tsconfig.json ./scripts/html.dev.ts",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "postversion": "git push && git push --tags",
    "html": "ts-node --project=scripts/tsconfig.json ./scripts/html.prod.ts",
    "copy-static": "ts-node --project=scripts/tsconfig.json ./scripts/copyStaticAssets.ts",
    "deploy-dev": "yarn build && yarn html && yarn copy-static",
    "deploy": "yarn build && yarn html && yarn copy-static --prod"
  },
  "dependencies": {
    "@stripe/stripe-js": "^1.22.0",
    "axios": "^0.25.0",
    "date-fns": "^2.25.0",
    "formik": "^2.2.9",
    "react": "^17.0.0",
    "react-bootstrap": "^2.1.1",
    "react-dom": "^17.0.0",
    "react-router-dom": "^6.2.1",
    "recoil": "^0.5.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^17.0.8",
    "@types/nunjucks": "^3.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/shelljs": "^0.8.9",
    "@vitejs/plugin-react": "^1.0.0",
    "bootstrap": "^5.1.3",
    "jest": "^27.3.1",
    "nunjucks": "^3.2.3",
    "prettier": "^2.4.1",
    "react-toastify": "^8.0.3",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.3.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-plugin-svgr": "^1.0.1"
  }
}
