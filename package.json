{
  "name": "reader-react",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "html-dev": "ts-node --project=scripts/tsconfig.json ./scripts/html.dev.ts",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "watch-test": "jest --watchAll",
    "postversion": "git push && git push --tags",
    "html": "ts-node --project=scripts/tsconfig.json ./scripts/html.prod.ts",
    "copy-static": "ts-node --project=scripts/tsconfig.json ./scripts/copyStaticAssets.ts",
    "deploy-dev": "yarn build && yarn html && yarn copy-static",
    "deploy": "yarn build && yarn html && yarn copy-static --prod",
    "mincss": "postcss src/index.css > dist/ftc-bootstrap.css && cp dist/ftc-bootstrap.css ~/svn-online/ftac/frontend/styles"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^1.7.1",
    "@stripe/stripe-js": "^1.27.0",
    "date-fns": "^2.25.0",
    "formik": "^2.2.9",
    "react": "^17.0.0",
    "react-bootstrap": "^2.2.3",
    "react-dom": "^17.0.0",
    "react-ga4": "^1.4.1",
    "react-router-dom": "^6.3.0",
    "react-toastify": "^8.2.0",
    "recoil": "^0.7.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^18.0.0",
    "@types/nunjucks": "^3.2.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.0",
    "@types/shelljs": "^0.8.11",
    "@vitejs/plugin-react": "^1.3.1",
    "bootstrap": "^5.1.3",
    "cssnano": "^5.1.8",
    "jest": "^27.5.1",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.13",
    "vite-plugin-svgr": "^2.2.0"
  },
  "resolutions": {
    "@types/react": "^17.0.0"
  }
}
