    "date-fns": "^2.29.1",
    "formik": "^2.2.9",
    "react": "^18.2.0",
    "react-bootstrap": "^2.2.3",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-toastify": "^9.0.7",
    "recoil": "^0.7.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/gtag.js": "^0.0.10",
    "@types/jest": "^28.1.6",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.6.3",
    "@types/nunjucks": "^3.2.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/shelljs": "^0.8.11",
    "@vitejs/plugin-react": "^2.0.0",
    "bootstrap": "^5.1.3",
    "cssnano": "^5.1.8",
    "jest": "^28.1.3",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.6.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3",
    "vite": "^3.0.4",
    "vite-plugin-svgr": "^2.2.1"
  },
  "resolutions": {
    "@types/react": "^18.0.0"
  }
