{
  "name": "reader-react",
  "version": "0.3.0",
  "scripts": {
    "dev": "vite",
    "html-dev": "ts-node --project=scripts/tsconfig.json ./scripts/html.dev.ts",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "postversion": "git push && git push --tags",
    "html": "ts-node --project=scripts/tsconfig.json ./scripts/html.prod.ts",
    "copy-static": "ts-node --project=scripts/tsconfig.json ./scripts/copyStaticAssets.ts",
    "deploy-dev": "yarn build && yarn html && yarn copy-static",
    "deploy": "yarn build && yarn html && yarn copy-static --prod"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^1.7.0",
    "@stripe/stripe-js": "^1.23.0",
    "axios": "^0.26.0",
    "date-fns": "^2.25.0",
    "formik": "^2.2.9",
    "react": "^17.0.0",
    "react-bootstrap": "^2.1.2",
    "react-dom": "^17.0.0",
    "react-router-dom": "^6.2.1",
    "react-toastify": "^8.2.0",
    "recoil": "^0.6.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^17.0.21",
    "@types/nunjucks": "^3.2.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.0",
    "@types/shelljs": "^0.8.11",
    "@vitejs/plugin-react": "^1.2.0",
    "bootstrap": "^5.1.3",
    "jest": "^27.5.1",
    "nunjucks": "^3.2.3",
    "prettier": "^2.4.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "vite": "^2.8.4",
    "vite-plugin-svgr": "^1.0.1"
  }
}
