{
  "name": "reader-react",
  "version": "1.2.7",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "html-dev": "ts-node --project=scripts/tsconfig.json ./scripts/html.dev.tsx",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "watch-test": "jest --watchAll",
    "postversion": "git push && git push --tags",
    "html": "ts-node --project=scripts/tsconfig.json ./scripts/html.prod.ts",
    "copy-static": "ts-node --project=scripts/tsconfig.json ./scripts/copyStaticAssets.ts",
    "deploy-dev": "yarn build && yarn html && yarn copy-static",
    "deploy": "yarn build && yarn html && yarn copy-static --prod",
    "mincss": "postcss src/index.css > dist/ftc-bootstrap.css && cp dist/ftc-bootstrap.css ~/svn-online/ftac/frontend/styles"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^1.16.5",
    "@stripe/stripe-js": "^1.54.1",
    "date-fns": "^2.30.0",
    "formik": "^2.4.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.8.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "react-toastify": "^9.1.3",
    "recoil": "^0.7.7",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/gtag.js": "^0.0.10",
    "@types/jest": "^28.1.8",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/shelljs": "^0.8.12",
    "@vitejs/plugin-react": "^2.2.0",
    "bootstrap": "^5.3.0",
    "cssnano": "^5.1.15",
    "jest": "^28.1.3",
    "jsdom": "^20.0.3",
    "postcss": "^8.4.25",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.8",
    "shelljs": "^0.8.5",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^3.2.7",
    "vite-plugin-svgr": "^2.4.0"
  },
  "resolutions": {
    "@types/react": "^18.0.0"
  }
